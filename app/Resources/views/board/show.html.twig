{% extends 'base.html.twig' %}

{% block body %}
    <h1>Board</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ board.id }}</td>
            </tr>
            <tr>
                <th>Boardname</th>
                <td>{{ board.boardName }}</td>
            </tr>
            <tr>
                <th>Boardlink</th>
                <td>{{ board.boardLink }}</td>
            </tr>
            <tr>
                <th>Boardprofilelink</th>
                <td>{{ board.boardProfileLink }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('boards_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('boards_edit', { 'id': board.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
